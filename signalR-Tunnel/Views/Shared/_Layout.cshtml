<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Tunnel</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/index.css" rel="stylesheet" />
</head>
<body>
    <table class="structure-table">
        <tr style="height:30px;background-color:#eeeeee;">
            <td colspan="3">
                <input type="hidden" id="displayname" />
                <button id="changeUsername">修改用户名</button>
            </td>
        </tr>
        <tr>
            <td class="left-column">1</td>
            <td>
                @RenderBody()
            </td>
            <td class="right-column">1</td>
        </tr>
        <tr style="height: 20px; background-color: #eeeeee;" class="">
            <td colspan="3"></td>
        </tr>
    </table>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.cookie.js"></script>
    <script src="~/Scripts/Plugins/layer-v2.4/layer/layer.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
